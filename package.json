{
	"name": "pangu-markdown-vscode",
	"displayName": "Pangu-Markdown-VSCode",
	"description": "customized pangu formatter for markdown",
	"version": "0.1.5",
	"publisher": "zhuyuanxiang",
	"engines": {
		"vscode": "^1.44.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/zhuyuanxiang/pangu-markdown-vscode"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:pangu-markdown-vscode.formatPangu"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "pangu-markdown-vscode.formatPangu",
				"title": "Pangu Format VSCode"
			}
		],
		"menus": {
			"editor/context": [{
				"when": "resourceLangId == markdown",
				"command": "pangu-markdown-vscode.formatPangu",
				"group": "1_modification"
			}]
		},
		"configuration": {
			"type": "object",
			"title": "Pangu",
			"properties": {
				"pangu-markdown-vscode.autoFormatOnSave": {
					"type": "boolean",
					"default": false,
					"description": "保存时自动格式化"
				},
				"pangu-markdown-vscode.covertChineseQuotations": {
					"type": "boolean",
					"default": false,
					"description": "“”和‘’转为「」和『』"
				},
				"pangu-markdown-vscode.covertEnglishQuotations": {
					"type": "boolean",
					"default": false,
					"description": "\"\" 和 '' 转为『』和「」"
				},
				"pangu-markdown-vscode.deleteExtraBlankLines": {
					"type": "boolean",
					"default": false,
					"description": "删除多余空行"
				},
				"pangu-markdown-vscode.convertFullwidthChars": {
					"type": "boolean",
					"default": false,
					"description": "全角字母转为半角字母"
				},
				"pangu-markdown-vscode.convertFullwidthNums": {
					"type": "boolean",
					"default": true,
					"description": "全角数字转为全角数字"
				},
				"pangu-markdown-vscode.condensePunctuation": {
					"type": "boolean",
					"default": true,
					"description": "重复标点缩减为一个"
				},
				"pangu-markdown-vscode.addSpaceForCode": {
					"type": "boolean",
					"default": false,
					"description": "行内代码两侧添加空格"
				},
				"pangu-markdown-vscode.addSpaceForLink": {
					"type": "boolean",
					"default": false,
					"description": "链接两侧添加空格"
				},
				"pangu-markdown-vscode.deleteLFThatWillBeIgnored": {
					"type": "boolean",
					"default": false,
					"description": "删除会被忽略 Markdown 的换行"
				},
				"pangu-markdown-vscode.units": {
					"type": "string",
					"default": "nm|um|mm|cm|dm|m|km",
					"description": "扩展会在数字与这里的单位之间添加空格（除了°），添加单位时请使用竖线（|）分隔"
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.44.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
