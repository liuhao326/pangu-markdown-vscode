{
	"name": "pangu-markdown-vscode",
	"displayName": "Pangu-Markdown-VSCode",
	"description": "customized pangu formatter for markdown",
	"version": "0.1.5",
	"publisher": "zhuyuanxiang",
	"engines": {
		"vscode": "^1.44.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/zhuyuanxiang/pangu-markdown-vscode"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:pangu-markdown-vscode.formatPangu"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "pangu-markdown-vscode.formatPangu",
				"title": "Pangu Format VSCode"
			}
		],
		"menus": {
			"editor/context": [{
				"when": "resourceLangId == markdown",
				"command": "pangu-markdown-vscode.formatPangu",
				"group": "1_modification"
			}]
		},
		"configuration": {
			"type": "object",
			"title": "Pangu Configuration",
			"properties": {
				"pangu-markdown-vscode.auto_format_on_save": {
					"type": "boolean",
					"default": false,
					"description": "Auto apply Pangu format on save"
				},
				"pangu-markdown-vscode.covert_Chinese_quotations": {
					"type": "boolean",
					"default": false,
					"description": "Covert “” and ‘’ to 『』 and 「」"
				},
				"pangu-markdown-vscode.covert_English_quotations": {
					"type": "boolean",
					"default": false,
					"description": "Covert \"\" and '' to 『』 and 「」"
				},
				"pangu-markdown-vscode.delete_extra_blank_lines": {
					"type": "boolean",
					"default": false,
					"description": "Replace multiple blank lines with one blank line"
				},
				"pangu-markdown-vscode.convert_fullwidthChars": {
					"type": "boolean",
					"default": false,
					"description": "Convert fullwidth character to halfwidth character"
				},
				"pangu-markdown-vscode.convert_fullwidthNums": {
					"type": "boolean",
					"default": true,
					"description": "Convert fullwidth number to halfwidth number"
				},
				"pangu-markdown-vscode.condense_punctuation": {
					"type": "boolean",
					"default": true,
					"description": "Replace repeated punctuation marks with one"
				},
				"pangu-markdown-vscode.addSpace_for_code": {
					"type": "boolean",
					"default": true,
					"description": "Add spaces at both ends of the code（`）"
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.44.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
